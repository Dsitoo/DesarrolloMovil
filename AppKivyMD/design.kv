        name: "screen_principal"
        md_bg_color: 0, 0.5, 0.5, 1
        MDBoxLayout:
            orientation: "vertical"

            MDBoxLayout:
                size_hint: 1, 0.2
                orientation: "horizontal"
                padding: '10dp'

